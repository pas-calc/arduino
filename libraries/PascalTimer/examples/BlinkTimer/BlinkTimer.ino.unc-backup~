// 08 JAN 2014

#include <PascalTimer.h>

PascalTimer blinktimer(250);  // adjust time here

byte led = 4;

void setup()
{
  Serial.begin(9600);
  Serial.println("[PascalTimer]: BlinkTimer\n");
  pinMode(led,OUTPUT);
}


void loop()
{
  if (blinktimer.istimer())
  {
    digitalWrite(led, blinktimer.state);    
    Serial.print("LED: ");
    Serial.print(blinktimer.state ? "on" : "off");
    Serial.println();
  }
}